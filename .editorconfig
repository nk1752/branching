# EditorConfig is a file format that helps developers define and maintain consistent coding styles between different editors and IDEs.

# Top-most EditorConfig file
root = true

# Set the default charset
[*]
charset = utf-8

# Indentation settings
[*.py]
indent_style = space
indent_size = 4

[*.js]
indent_style = space
indent_size = 2

[*.html]
indent_style = space
indent_size = 2

[*.{yml,yaml}]
indent_style = space
indent_size = 2

# End of line settings
[*.{js,py,html}]
end_of_line = lf

# Trim trailing whitespace
[*.{js,py,html}]
trim_trailing_whitespace = true

# Ensure a newline at the end of the file
[*.{js,py,html}]
insert_final_newline = true